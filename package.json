{
  "name": "refresh-secrets",
  "version": "1.0.0",
  "description": "A authentication server based on token history and refresh of secret keys",
  "main": "server.js",
  "repository": "https://github.com/Jhonmt-cpu/refresh-secrets.git",
  "author": "Jo√£o Mateus Alves Borges de Melo",
  "license": "Apache-2.0",
  "scripts": {
    "start": "node ./bin/shared/infra/http/server.js",
    "dev": "ts-node-dev --respawn --transpile-only ./src/shared/infra/http/server.ts",
    "build": "tsc",
    "typeorm": "ts-node-dev ./node_modules/typeorm/cli.js",
    "migration:run": "NODE_ENV=migrations typeorm-ts-node-esm migration:run -d ./src/shared/infra/database/AppDataSource.ts",
    "migration:revert": "NODE_ENV=migrations typeorm-ts-node-esm migration:revert -d ./src/shared/infra/database/AppDataSource.ts",
    "seed": "NODE_ENV=migrations ts-node-dev ./src/shared/infra/database/seed.ts",
    "test": "NODE_ENV=test jest --runInBand --detectOpenHandles --forceExit"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "celebrate": "^15.0.1",
    "class-transformer": "^0.5.1",
    "dayjs": "^1.11.9",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "ioredis": "^5.3.2",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.1",
    "node-schedule": "^2.1.1",
    "pg": "^8.11.2",
    "rate-limiter-flexible": "^2.4.2",
    "redis": "^4.6.8",
    "reflect-metadata": "^0.1.13",
    "tsyringe": "^4.8.0",
    "typeorm": "^0.3.17",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.17",
    "@types/ioredis": "^5.0.0",
    "@types/jest": "^29.5.4",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.4.10",
    "@types/node-schedule": "^2.1.0",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^29.6.4",
    "prettier": "^2.3.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  }
}
